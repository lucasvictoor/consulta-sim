<style>
    body {
        background-color: #add8e6;
        text-align: center;
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #333;
    }

    table {
        width: 70%;
        margin: 0 auto;
        border-collapse: collapse;
        background-color: #f5f5f5;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #0074e4;
        color: #fff;
    }

    tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tbody tr:hover {
        background-color: #ddd;
    }

    a {
        text-decoration: none;
        color: #0074e4;
    }

    a:hover {
        color: #0056b3;
    }
</style>

<h1>Lista de Consultas</h1>

<table>
  <thead>
  <tr>
    <th>Data</th>
    <th>Médico</th>
    <th>Paciente</th>
  </tr>
  </thead>
  <tbody>
  <% @consultas.each do |consulta| %>
    <tr>
      <td><%= consulta.data %></td>
      <td><%= consulta.medico.nome %></td>
      <td><%= consulta.paciente.nome_completo %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Agendar Consulta', new_consulta_path %>
<%= link_to 'Voltar para à Home Page', root_path %>
